@model List<TblBlog>
@{
	ViewData["Title"] = "Blog List";
	int count = 0;
}

<h1>Blog</h1>

<a href="/Blog/Create" class="btn btn-success">New</a>

<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>
				No.
			</th>
			<th>
				Title
			</th>
			<th>
				Author
			</th>
			<th>
				Content
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a href="/Blog/Edit/@(item.BlogId)" class="btn btn-warning">Edit</a>
					<a href="/Blog/Delete/@(item.BlogId)" class="btn btn-danger">Delete</a>
				</td>
				<td>@(++count)</td>
				<td>@item.BlogTitle</td>
				<td>@item.BlogAuthor</td>
				<td>@item.BlogContent</td>
			</tr>
		}
	</tbody>
</table>
