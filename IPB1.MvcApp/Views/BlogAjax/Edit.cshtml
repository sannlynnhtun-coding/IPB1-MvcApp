<input type="hidden" id="blogId" value="@Model.BlogId" />

<div class="mb-3">
    <label for="blogTitle" class="form-label">Blog Title</label>
    <input type="text" class="form-control" id="blogTitle" value="@Model.BlogTitle">
</div>
<div class="mb-3">
    <label for="blogAuthor" class="form-label">Blog Author</label>
    <input type="text" class="form-control" id="blogAuthor" value="@Model.BlogAuthor">
</div>
<div class="mb-3">
    <label for="blogContent" class="form-label">Blog Content</label>
    <input type="text" class="form-control" id="blogContent" value="@Model.BlogContent">
</div>
<button type="button" class="btn btn-primary" id="btnUpdate">Update</button>

@section scripts {
    <script>
        $("#btnUpdate").click(function (e) {
            e.preventDefault();

            const data = {
                BlogId: $("#blogId").val(),
                BlogTitle: $("#blogTitle").val(),
                BlogAuthor: $("#blogAuthor").val(),
                BlogContent: $("#blogContent").val()
            };

            $.ajax({
                type: "POST",
                url: "/BlogAjax/Update",
                data: { request: data },
                success: function (response) {
                    alert(response.Message);
                    if (response.IsSuccess) {
                        window.location.href = "/Blog/Index";
                    }
                },
                error: function () {
                    alert("Error updating blog.");
                }
            });
        });
    </script>
}
